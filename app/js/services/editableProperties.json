[
    {
        "label": "Basic Display",
        "description": "short tab description can be placed here",
        "type": "menu",
        "model": "basicDisplay",
        "description":"basic settings let you set bla bla bla\n lorem ipsum test goes here",
        "icon":"TabBasicSettings",
        "children": [
            {
                "label": "Player Display Name",
                "type": "text",
                "icon": "icon-book",
                "model": "name",
                "default": "New Player"
            },
            {
                "label": "Top overlay",
                "type": "menu",
                "model": "topOverlay",
                "children": [
                    {
                        "label": "Title",
                        "type": "checkbox",
                        "default": true,
                        "model": "title"
                    },
                    {
                        "label": "Info",
                        "type": "checkbox",
                        "default": true,
                        "model": "info"
                    },
                    {
                        "label": "Share",
                        "type": "checkbox",
                        "default": true,
                        "model": "share"
                    },
                    {
                        "label": "Color",
                        "type": "color",
                        "default": "#fff",
                        "model": "color"
                    }
                ]
            },
            {
                "label": "Control Bar",
                "type": "menu",
                "model": "controlBar",
                "children": [
                    {
                        "label": "Volume",
                        "type": "checkbox",
                        "default": true,
                        "model": "volume"
                    },
                    {
                        "label": "Initial Volume",
                        "type": "number",
                        "default": 80,
                        "model": "initialvolume",
                        "from": 0,
                        "to": 100,
                        "stepsize": 5
                    },
                    {
                        "label": "Radio Size",
                        "type": "radio",
                        "default": 0,
                        "options": [
                            {
                                "label": "None",
                                "value": 0
                            },
                            {
                                "label": "Normal & Big",
                                "value": 1
                            },
                            {
                                "label": "Small,Normal & Big",
                                "value": 2
                            }
                        ],
                        "model": "radiosize"
                    },
                    {
                        "label": "Size",
                        "type": "select",
                        "default": "0",
                        "options": [
                            {
                                "label": "None",
                                "value": 0
                            },
                            {
                                "label": "Normal & Big",
                                "value": 1
                            },
                            {
                                "label": "Small,Normal & Big",
                                "value": 2
                            }
                        ],
                        "model": "size"
                    },
                    {
                        "label": "Counters",
                        "type": "checkbox",
                        "default": false,
                        "model": "counters"
                    },
                    {
                        "label": "Quality",
                        "type": "checkbox",
                        "default": true,
                        "model": "quality"
                    },
                    {
                        "label": "Fullscreen",
                        "type": "checkbox",
                        "default": true,
                        "model": "fullscreen"
                    }

                ]

            }
        ]
    }
]
