[
    {
        "label": "Basic Display",
        "type": "menu",
        "description": "basic settings let you set bla bla bla\n lorem ipsum test goes here",
        "model": "basicDisplay",
        "icon": "TabBasicSettings",
        "children": [
            {
                "label": "Player's Name",
                "type": "text",
                "model": "name",
                "default": "New Player",
                "helpnote": "Please enter your player's name blah blah blah",
                "endline": "true"
            },
            {
                "label": "Long Description",
                "type": "modaledit",
                "helpnote": "this is the edit modal",
                "model": "basicDisplay.description",
                "placeholder": "Enter player description"
            },
            {
                "label": "Player Tags",
                "type": "tags",
                "helpnote": "tags and bugs",
                "model": "basicDisplay.tags",
                "source": "getTags"
            },
            {
                "label": "Preview entry",
                "type": "select2data",
                "source": "listEntries",
                "query": "queryEntries",
                "helpnote": "testing112143",
                "endline": "true",
                "width": "100%",
                "model": "basicDisplay.previewentry",
                "data-placeholder": "Pick a entry"
            },
            {
                "options": [
                    {
                        "label": "4/3",
                        "value":"narrow"},
                    {
                        "label": "16/9",
                        "value":"wide"}
                ],
                "showSearch": false,
                "initvalue":"wide",
                "helpnote": "select whatever",
                "type": "dropdown",
                "label": "Aspect Ratio",
                "endline": "true",
                "model": "basicDisplay.aspectRatio"
            },
            {
                "type": "featuremenu",
                "model": "basicDisplay.transport",
                "label": "Transport",
                "helpnote": "what do you want to do?",
                "children": [
                    {
                        "options": [
                            {
                                "label": "2mbs",
                                "value": 2
                            },
                            {
                                "label": "1mbs",
                                "value": 1
                            }
                        ],
                        "initvalue": 1,
                        "type": "dropdown",
                        "label": "Prefered Bitrate",
                        "model": "basicDisplay.transport.preferedFlavorBR"
                    },
                    {
                        "options": [
                            {
                                "label": "option",
                                "value": "0.75"
                            }
                        ],
                        "initvalue": "0.75",
                        "type": "dropdown",
                        "label": "Delivery type",
                        "model": "basicDisplay.transport.deliveryType"
                    }
                ]
            },
            {
                "type": "featuremenu",
                "model": "basicDisplay.deviceSpecific",
                "label": "Device Specific Flags",
                "children": [
                    {
                        "type": "checkbox",
                        "helpnote": "to check",
                        "label": "Html Controls on iPad",
                        "model": "basicDisplay.deviceSpecific.ipadHTMLcontrols"
                    },
                    {
                        "type": "checkbox",
                        "label": "Native Controls Fullscreen",
                        "model": "basicDisplay.deviceSpecific.nativeFullscreenControls"
                    }
                ]
            },
            {
                "label": "Last Update",
                "type": "readonly",
                "helpnote": "to read",
                "model": "updatedAt"
            },
            {
                "label": "Version:",
                "btn-label": "Update Player",
                "type": "infoAction",
                "helpnote": "this is the players version",
                "btn-class": "btn-xs btn-primary",
                "action": "update",
                "model": "version"
            }
        ]
    },
    {
        "label": "Look and Feel",
        "icon": "TabLookandFeel",
        "description": "look and feel let you set bla bla bla\n lorem ipsum test goes here",
        "type": "menu",
        "model": "lookAndFeel",
        "children": [
            {
                "type": "menu",
                "model": "lookAndFeel.title",
                "endline": "true",
                "label": "Title Label",
                "children": [
                    {
                        "options": [
                            {
                                "label": "Right",
                                "value": "right"
                            },
                            {
                                "label": "Center",
                                "value": "center"
                            },
                            {
                                "label": "Left",
                                "value": "left"
                            }
                        ],
                        "initvalue": "right",
                        "type": "radio",
                        "model": "lookAndFeel.title.align"
                    },
                    {
                        "options": [
                            {
                                "label": "option",
                                "value": "0.75"
                            }
                        ],
                        "initvalue": "0.75",
                        "type": "dropdown",
                        "label": "Delivery type",
                        "model": "lookAndFeel.titledeliveryType"
                    },
                    {
                        "label": "Template",
                        "model": "lookAndFeel.title.titleTemplate",
                        "default": "<span data-bind=”{mediaProxy.entry.name}”></span>",
                        "type": "modaltextbox"
                    },
                    {
                        "options": [
                            {
                                "label": "videoHolder",
                                "value": "videoHolder"
                            },
                            {
                                "label": "ContentHolder",
                                "value": "contentHolder"
                            }
                        ],
                        "initvalue": "videoHolder",
                        "type": "dropdown",
                        "label": "Display location",
                        "model": "lookAndFeel.title.titleContainer"
                    },
                    {
                        "default": ".titleLabel",
                        "model": "lookAndFeel.title.titleCSSclass",
                        "label": "CSS class",
                        "type": "readonly"
                    }
                ]
            },
            {
                "type": "menu",
                "model": "lookAndFeel.controlBar",
                "endline": "true",
                "label": "Control Bar",
                "children": [
                    {
                        "label": "Size",
                        "showTextEntry": true,
                        "type": "slider",
                        "default": "100%,30px",
                        "model": "lookAndFeel.controlBar.controlBarSize"
                    },
                    {
                        "type": "featuremenu",
                        "model": "lookAndFeel.controlBar.controlBarVolume",
                        "label": "Volume Control",
                        "children": [
                            {
                                "options": [
                                    {
                                        "label": "Horizontal",
                                        "value": "0"
                                    },
                                    {
                                        "label": "Vertical",
                                        "value": "1"
                                    }
                                ],
                                "type": "radio",
                                "initvalue": "0",
                                "helpnote": "somthing of the sort",
                                "model": "lookAndFeel.controlBar.controlBarVolume.controlBarVolumeDirection"
                            },
                            {
                                "label": "Initial Volume",
                                "type": "number",
                                "default": 80,
                                "model": "lookAndFeel.controlBar.controlBarVolume.initialvolume",
                                "from": 0,
                                "to": 100,
                                "stepsize": 5
                            }
                        ]
                    },
                    {
                        "type": "featuremenu",
                        "model": "lookAndFeel.controlBar.logo",
                        "label": "Logo",
                        "order": 0,
                        "children": [
                            {
                                "options": [
                                    {
                                        "label": "Right",
                                        "value": "right"
                                    },
                                    {
                                        "label": "Center",
                                        "value": "center"
                                    },
                                    {
                                        "label": "Left",
                                        "value": "left"
                                    }
                                ],
                                "initvalue": "right",
                                "type": "radio",
                                "model": "lookAndFeel.controlBar.logo.align"
                            },
                            {
                                "model": "lookAndFeel.controlBar.logo.priority",
                                "label": "Display Priority",
                                "options": [
                                    {
                                        "label": "Low",
                                        "value": "0"
                                    },
                                    {
                                        "label": "Medium",
                                        "value": "1"
                                    },
                                    {
                                        "label": "High",
                                        "value": "2"
                                    }
                                ],
                                "initvalue": "1",
                                "type": "dropdown"
                            }
                        ]
                    },
                    {
                        "type": "featuremenu",
                        "model": "lookAndFeel.controlBar.flavor",
                        "label": "Flavor Selector",
                        "order": 0,
                        "children": [
                            {
                                "options": [
                                    {
                                        "label": "Right",
                                        "value": "right"
                                    },
                                    {
                                        "label": "Center",
                                        "value": "center"
                                    },
                                    {
                                        "label": "Left",
                                        "value": "left"
                                    }
                                ],
                                "initvalue": "right",
                                "type": "radio",
                                "model": "lookAndFeel.controlBar.flavor.align"
                            },
                            {
                                "model": "lookAndFeel.controlBar.flavor.priority",
                                "label": "Display Priority",
                                "options": [
                                    {
                                        "label": "Low",
                                        "value": "0"
                                    },
                                    {
                                        "label": "Medium",
                                        "value": "1"
                                    },
                                    {
                                        "label": "High",
                                        "value": "2"
                                    }
                                ],
                                "initvalue": "1",
                                "type": "dropdown"
                            }
                        ]
                    },
                    {
                        "type": "featuremenu",
                        "model": "lookAndFeel.controlBar.playbackRate",
                        "label": "Playback Rate Selector",
                        "order": 0,
                        "children": [
                            {
                                "options": [
                                    {
                                        "label": "Right",
                                        "value": "right"
                                    },
                                    {
                                        "label": "Center",
                                        "value": "center"
                                    },
                                    {
                                        "label": "Left",
                                        "value": "left"
                                    }
                                ],
                                "initvalue": "right",
                                "type": "radio",
                                "model": "lookAndFeel.controlBar.playbackRate.align"
                            },
                            {
                                "model": "lookAndFeel.controlBar.playbackRate.priority",
                                "label": "Display Priority",
                                "options": [
                                    {
                                        "label": "Low",
                                        "value": "0"
                                    },
                                    {
                                        "label": "Medium",
                                        "value": "1"
                                    },
                                    {
                                        "label": "High",
                                        "value": "2"
                                    }
                                ],
                                "initvalue": "1",
                                "type": "dropdown"
                            }
                        ]
                    },
                    {
                        "type": "featuremenu",
                        "model": "lookAndFeel.controlBar.flagContent",
                        "label": "Flag Content",
                        "order": 0,
                        "children": [
                            {
                                "options": [
                                    {
                                        "label": "Right",
                                        "value": "right"
                                    },
                                    {
                                        "label": "Center",
                                        "value": "center"
                                    },
                                    {
                                        "label": "Left",
                                        "value": "left"
                                    }
                                ],
                                "initvalue": "right",
                                "type": "radio",
                                "model": "lookAndFeel.controlBar.flagContent.align"
                            },
                            {
                                "model": "lookAndFeel.controlBar.flagContent.priority",
                                "label": "Display Priority",
                                "options": [
                                    {
                                        "label": "Low",
                                        "value": "0"
                                    },
                                    {
                                        "label": "Medium",
                                        "value": "1"
                                    },
                                    {
                                        "label": "High",
                                        "value": "2"
                                    }
                                ],
                                "initvalue": "1",
                                "type": "dropdown"
                            }
                        ]
                    }
                ]
            },
            {
                "type": "menu",
                "model": "lookAndFeel.watermark",
                "label": "Watermark",
                "endline": "true",
                "children": [
                    {
                        "label": "Watermark Logo URL",
                        "model": "lookAndFeel.watermark.watermarkURL",
                        "validation": "url",
                        "type": "text"
                    },
                    {
                        "options": [
                            {
                                "label": "Top Left",
                                "value": "top,left"
                            },
                            {
                                "label": "Top Right",
                                "value": "top,right"
                            }
                        ],
                        "label": "Position",
                        "type": "dropdown",
                        "initvalue": "top,left",
                        "model": "lookAndFeel.watermark.watermarkPosition"
                    }
                ]
            },
            {
                "type": "menu",
                "endline": "true",
                "model": "lookAndFeel.stylesAndColors",
                "label": "Styles & Colors",
                "children": [
                    {
                        "label": "ControlBar Background",
                        "model": "lookAndFeel.stylesAndColors.controlBarColor",
                        "default": "#000",
                        "type": "color",
                        "helpnote": "something of the sort of that"
                    },
                    {
                        "label": "Playhead Scurbber",
                        "model": "lookAndFeel.stylesAndColors.playheadColor",
                        "default": "#fff",
                        "type": "color"
                    },
                    {
                        "label": "Focus Color",
                        "model": "lookAndFeel.stylesAndColors.focusColor",
                        "default": "#fff",
                        "type": "color"
                    },
                    {
                        "type": "featuremenu",
                        "model": "lookAndFeel.stylesAndColors.textOptions",
                        "label": "Text Options",
                        "children": [
                            {
                                "label": "Text Color",
                                "model": "lookAndFeel.stylesAndColors.textOptions.textColorValue",
                                "default": "#fff",
                                "type": "color"
                            },
                            {
                                "options": [
                                    {
                                        "label": "Ariel",
                                        "value": "ariel"
                                    },
                                    {
                                        "label": "Helvetica",
                                        "value": "helvetica"
                                    }
                                ],
                                "label": "Font name",
                                "type": "dropdown",
                                "initvalue": "ariel",
                                "model": "lookAndFeel.stylesAndColors.textOptions.fontName"
                            },
                            {
                                "label": "Base Font Size (ems)",
                                "type": "number",
                                "default": 1,
                                "model": "lookAndFeel.stylesAndColors.textOptions.fontSize",
                                "from": 0.1,
                                "to": 5,
                                "stepsize": 0.1,
                                "numberOfDecimals": 1
                            }
                        ]
                    }
                ]
            }
        ]
    }
]